// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int        @id @default(autoincrement())
  name      String
  username  String     @unique
  email     String     @unique
  otp       String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Positons  Positions?
}

model Positions {
  id        Int         @id @default(autoincrement())
  position  String
  active    Boolean
  UserId    Int         @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  workflows Workflows[]
  Orders    Orders[]
  Stages    Stages[]
  Users     Users       @relation(fields: [UserId], references: [id])
}

model Workflows {
  id         Int        @id @default(autoincrement())
  action     String
  message    String
  ApprovalId Int
  active     Boolean
  createdAt  DateTime   @default(now())
  Orders     Orders[]
  Positions  Positions? @relation(fields: [ApprovalId], references: [id])
}

model Tags {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Products  Products[]
}

model Products {
  id          Int             @id @default(autoincrement())
  name        String
  description String          @db.Text
  imgUrl      String?
  qty         Int
  price       Int
  statusOrder String?
  TagId       Int
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  Orders      ProductOrders[]
  Tags        Tags?           @relation(fields: [TagId], references: [id])
}

model ProductOrders {
  id        Int       @id @default(autoincrement())
  productId Int?
  orderId   Int?
  Products  Products? @relation(fields: [productId], references: [id])
  Orders    Orders?   @relation(fields: [orderId], references: [id])
}

model Orders {
  id          Int             @id @default(autoincrement())
  AuthorId    Int
  qty         Int
  totalAmount Int
  WorkflowId  Int
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  Products    ProductOrders[]
  Stages      Stages?
  Author      Positions?      @relation(fields: [AuthorId], references: [id])
  Workflows   Workflows?      @relation(fields: [WorkflowId], references: [id])
}

model Stages {
  id             Int        @id @default(autoincrement())
  OrdersId       Int        @unique
  UserPositionId Int?
  UserPosition   Positions? @relation(fields: [UserPositionId], references: [id])
  Orders         Orders     @relation(fields: [OrdersId], references: [id])
}
